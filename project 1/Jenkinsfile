pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-app"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                git branch: 'Sushrut', url: 'https://github.com/TanV-04/DevOps_Lab_5.git'
            }
        }

        stage('List Files') {
            steps {
                sh '''
                    echo "Files in root directory:"
                    ls -la
                    echo "Files in project 1 directory:"
                    ls -la "project 1/" || echo "project 1 directory not found"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "Building Docker image..."
                    if [ -f "project 1/Dockerfile" ]; then
                        cd "project 1"
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    elif [ -f "Dockerfile" ]; then
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    else
                        echo "Dockerfile not found in root or project 1 directory"
                        exit 1
                    fi
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    echo "Running tests in Docker container..."
                    docker run --rm ${IMAGE_NAME}:${IMAGE_TAG} echo "Tests executed successfully"
                '''
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                    echo "Deploying container..."
                    # Stop and remove existing container if it exists
                    docker stop my-app-container || true
                    docker rm my-app-container || true
                    # Run new container
                    docker run -d --name my-app-container -p 3000:3000 ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }
}
