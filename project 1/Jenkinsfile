pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'jenkins-docker', url: 'https://github.com/friend-username/their-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("jenkins-demo-image")
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'echo "Running tests..."'
            }
        }

        stage('Deploy Container') {
            steps {
                sh 'docker rm -f demo-app || true'
                sh 'docker run -d --name demo-app -p 3000:3000 jenkins-demo-image'
            }
        }
    }
}
