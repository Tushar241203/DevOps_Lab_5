pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Checking out code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Building Java application...'
                sh 'javac App.java'
            }
        }
        
        stage('Test') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Running tests...'
                sh 'java App'
            }
        }
        
        stage('Docker Build') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Building Docker image...'
                script {
                    def image = docker.build("my-java-app:${BUILD_NUMBER}")
                }
            }
        }
        
        stage('Docker Run') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Running Docker container...'
                script {
                    docker.image("my-java-app:${BUILD_NUMBER}").run()
                }
            }
        }
        
        stage('Deploy') {
            steps dir('docker-assignments/project1-jenkins') {
                echo 'Deployment completed successfully!'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed!'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
