pipeline {
    agent { label 'linux' }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'tanvi', url: 'https://github.com/TanV-04/DevOps_Lab_5.git'
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    sh 'python3 --version'
                    sh 'python3 -m venv venv'
                    sh './venv/bin/activate'
                    sh 'pip install -r Project1/requirements.txt'
                }
            }
        }

        stage('Run Python App') {
            steps {
                script {
                    sh './venv/bin/activate && python3 Project1/app.py'
                }
            }
        }
    }

    post {
        success {
            echo "App executed successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
