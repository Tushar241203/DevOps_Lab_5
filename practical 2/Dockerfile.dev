# Dockerfile.dev
FROM node:20-alpine

WORKDIR /app

# Install deps (better cache with only package files first)
COPY package*.json ./
RUN npm ci || npm install

# Copy source
COPY . .

# Expose Vite port
EXPOSE 5173

# Run Vite dev server and bind to 0.0.0.0 for container access
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
