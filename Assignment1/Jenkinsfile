pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/your-repo/docker-flask-jenkins.git'
      }
    }
    stage('Build') {
      steps {
        sh 'docker build -t flask-app .'
      }
    }
    stage('Test') {
      steps {
        sh 'docker run --rm -d -p 5000:5000 flask-app'
      }
    }
    stage('Push') {
      steps {
        sh 'docker tag flask-app your-dockerhub/flask-app:latest'
        sh 'docker push your-dockerhub/flask-app:latest'
      }
    }
  }
}
